{
  "name": "fox-ext",
  "displayName": "Fox ext",
  "version": "0.0.2",
  "description": "Fox browser extension companion",
  "author": "Qi An <ng.qi.an@sji.edu.sg>",
  "scripts": {
    "dev": "plasmo dev --target=firefox-mv2",
    "dev:chrome": "plasmo dev",
    "build": "plasmo build --target=firefox-mv2 --zip && plasmo build --target=chrome-mv3 -zip",
    "package": "plasmo package --target=firefox-mv2 && plasmo package --target=chrome-mv3"
  },
  "dependencies": {
    "bowser": "^2.11.0",
    "plasmo": "0.89.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "activeTab"
    ]
  }
}
